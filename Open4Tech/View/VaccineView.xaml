<UserControl x:Class="KidsVaccineReminder.View.VaccineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:local="clr-namespace:KidsVaccineReminder.View"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Resources/Login.png" Stretch="UniformToFill" />
        </Grid.Background>
        <StackPanel>
            <TextBox
            x:Name="Email"
            Grid.Row="2"
            Width="430"
            Height="40"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="White"
            FontSize="18"
            Foreground="White"
            Text="{Binding Path=UserModel.Email}"
            TextWrapping="Wrap">
                <materialDesign:HintAssist.Hint>
                    <TextBlock Foreground="White">Email</TextBlock>
                </materialDesign:HintAssist.Hint>

            </TextBox>
        </StackPanel>
    </Grid>
</UserControl>
